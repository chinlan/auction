<div class="row">
  <div class="col-md-3">
    <h4><%= item.product_name %></h4>
  </div>
  <div class="col-md-9">
    <%= form_for item, remote: true do |f| %>
      <div class='form-row'>
        <div class='col-md-3'>
          <%= f.number_field :quantity, class: "form-control", min: 1 %>
          <%= f.hidden_field :product_id, value: item.product_id %>
        </div>
        <div class='col-md-6'>
          <div class='btn-group'>
            <%= f.submit "Update quantity", class: "btn btn-outline-secondary btn-sm" %>
            <%= link_to "Delete", item, { data: { confirm: "Sure?" }, method: :delete, remote: true, class: "btn btn-outline-danger btn-sm" } %>
          </div>
        </div>
        <div class='col-md-3'>
          <%= number_to_currency item.sum_price %> pt
        </div>
      </div>
    <% end %>
  </div>
</div>
